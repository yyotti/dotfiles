{
	"segment_data": {
		"ext.common.mail.email_imap_alert": {
			"before": "✉ "
		}
	},
	"segments": {
		"right": [
			{
				"function": "ext.common.mail.email_imap_alert",
				"priority": 30,
				"args": {
					"server": "imap.gmail.com",
					"port": 993,
					"use_ssl": true
				}
			},
			{
				"function": "powerline.segments.common.sys.cpu_load_percent",
				"priority": 50,
				"args": {
					"format": "CPU {0:3.1f}%"
				}
			},
			{
				"function": "ext.tmux.segments.ps.used_memory",
				"priority": 50
			},
			{
				"function": "ext.tmux.segments.ps.total_memory",
				"priority": 50,
				"before": "/",
				"after": " MB",
				"draw_soft_divider": false
			},
			{
				"function": "ext.tmux.segments.ps.used_memory_percent",
				"priority": 50,
				"before": " (",
				"after": ")",
				"args": {
					"format": "{0:.1f}%"
				},
				"draw_soft_divider": false
			},
			{
				"function": "powerline.segments.common.net.network_load",
				"priority": 10
			},
			{
				"function": "powerline.segments.common.time.date",
				"args": {
					"format": "%Y年%-m月%-d日(%a)",
					"istime": true
				}
			},
			{
				"function": "powerline.segments.common.time.date",
				"name": "time",
				"draw_soft_divider": false,
				"before": " ",
				"args": {
					"format": "%H:%M",
					"istime": true
				}
			},
			{
				"function": "powerline.segments.common.net.hostname"
			}
		]
	}
}
