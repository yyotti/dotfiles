snippet ifelse
options head
	{if ${1:#:condition}}
	${2:TARGET}
	{else}
	${3:#:code...}
	{/if}
	${0}

snippet if
options head
	{if ${1:#:condition}}
	${0:TARGET}
	{/if}

snippet $
options word
	{$${1:#:expr}}${0}

snippet     foreach
options     head
	{foreach from=${1:$list} item=${2:elem}}
	${0:TARGET}
	{/foreach}

snippet     foreachelse
options     head
	{foreach from=${1:$list} item=${2:elem}}
	${3:TARGET}
        {foreachelse}
        ${0:\{* ... *\}}
	{/foreach}
