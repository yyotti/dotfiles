# vim:set expandtab:
snippet     print_d
abbr        "<!-- xxx=[yyy] -->\n";
options     head
	print "<!-- ${0:#:name}=[{$$0}] -->\n";${0}

snippet     print_rd
abbr        "<!--"; print_r(...); "-->\n";
options     head
	print "<!-- ${1:#:name}=";
	print_r($$1);
	print "-->\n";${0}

snippet     function
abbr public function () {}
options     head
	${1:public }function ${2:#:FunctionName}(${3}) {
		${4:TARGET}
	}

snippet     construct
options     head
	function __construct(${1}) {
		${0:TARGET}
	}

snippet     mdb2_query
abbr        $cursor = $mdb2->query($sql); if (PEAR::isError($cursor)) { die(...); }
options     head
	$${1:cursor} = $mdb2->query($${2:sql});
	if (PEAR::isError($$1)) {
	    die($$1->getUserInfo() . '<br />' . $$2);
	}
	${0}

