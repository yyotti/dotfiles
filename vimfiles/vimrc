" vimshell {{{
if neobundle#tap('vimshell')
  " config {{{
  call neobundle#config({
        \   'autoload': {
        \     'commands': [
        \       {
        \         'name': 'VimShell',
        \         'complete': 'customlist,vimshell#complete',
        \       },
