[diff]
	tool = vimdiff
	algorithm = histogram
[core]
	editor = vim
        excludesfile = ~/.gitignore_global
[push]
	default = simple
[merge]
	tool = vimdiff
[alias]
	df = diff
	ds = diff --name-status
	dt = difftool
	ss = status --short
	st = status
	co = checkout
	l = log --all --graph --pretty=format:'%C(yellow)%h%Creset -%C(bold blue)%d%Creset %s %Cgreen(%cr)' --abbrev-commit --date=relative
	ft = fetch --prune
	addignore = commit -m \"Add ignore files\"
[ghq]
	root = ~/.ghq
	root = ~/.go/src
